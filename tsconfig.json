{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "./backend",  // Only compile files in the backend folder
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["backend/**/*.ts"],  // Include all TypeScript files in the backend folder
  "exclude": ["node_modules", "frontend"]  // Exclude unnecessary folders like node_modules and frontend
}
